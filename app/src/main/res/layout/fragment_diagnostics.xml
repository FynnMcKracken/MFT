<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.DiagnosticsFragment">


    <cdflynn.android.library.checkview.CheckView
            android:id="@+id/diagnostics_check_mark"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:checkView_strokeColor="@color/green"
            app:checkView_strokeWidth="6dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diagnostics_progress_spinner" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/colorAccent"/>
    <TextView
            android:text="@string/diagnostics_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diagnostics_progress_textview"
            app:layout_constraintTop_toBottomOf="@+id/diagnostics_progress_spinner" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/diagnostics_progress_spinner"
            app:layout_constraintStart_toStartOf="@+id/diagnostics_progress_spinner"
            android:shadowColor="@color/colorAccent" android:textColor="@color/colorAccent"/>

</androidx.constraintlayout.widget.ConstraintLayout>




