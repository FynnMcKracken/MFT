<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.DiagnosticsFragment">


    <cdflynn.android.library.checkview.CheckView
            android:id="@+id/diagnostics_check_mark"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:checkView_strokeColor="@color/green"
            app:checkView_strokeWidth="6dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/start_diagnostics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diagnostics_start_button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/diagnostics_check_mark"/>

</androidx.constraintlayout.widget.ConstraintLayout>




