                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/device_layout"
                                                   android:background="@drawable/device_item_background"
                                                   android:paddingBottom="8dp" android:padding="8dp"
>

