<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:id="@+id/fragment_bluetooth_cl"
                                                   android:clickable="true"
                                                   android:focusable="true"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_bluetooth"
                android:id="@+id/fragment_bluetooth_iv" app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/title_bluetooth"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="Bluetooth On"
                android:background="@color/blue_grey_700"
                android:textColor="@color/blue_grey_100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_bluetooth_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fragment_bluetooth_button_off"
                android:id="@+id/fragment_bluetooth_button_on" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="Bluetooth Off"
                android:background="@color/blue_grey_700"
                android:textColor="@color/blue_grey_100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_bluetooth_iv"
                app:layout_constraintStart_toEndOf="@id/fragment_bluetooth_button_on"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/fragment_bluetooth_button_off" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="Discover Devices"
                android:background="@color/blue_grey_700"
                android:textColor="@color/blue_grey_100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_bluetooth_button_on"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fragment_bluetooth_button_show"
                android:id="@+id/fragment_bluetooth_button_discover" android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        <Button
                android:text="Show Paired Devices"
                android:background="@color/blue_grey_700"
                android:textColor="@color/blue_grey_100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_bluetooth_button_off"
                app:layout_constraintStart_toEndOf="@id/fragment_bluetooth_button_discover"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/fragment_bluetooth_button_show" android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="@string/bluetooth_devices"
                android:textSize="24sp"
                android:textColor="@color/blue_grey_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_bluetooth_button_test-dmx" android:layout_marginTop="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_bluetooth_rv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>
        <ProgressBar
                android:id="@+id/fragment_bluetooth_spinner"
                style="?android:attr/progressBarStyleLarge"
                android:progressDrawable="@drawable/circular_progress_bar"
                app:layout_constraintTop_toTopOf="@id/fragment_bluetooth_rv"
                app:layout_constraintStart_toStartOf="@id/fragment_bluetooth_rv"
                app:layout_constraintEnd_toEndOf="@id/fragment_bluetooth_rv"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:text="send Test-DMX-Paket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_bluetooth_button_test-dmx" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_bluetooth_button_discover"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/fragment_bluetooth_button_test-ip" android:layout_marginEnd="8dp"/>
        <Button
                android:text="Send Test-IP-Adress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_bluetooth_button_test-ip" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_bluetooth_button_show"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_bluetooth_button_test-dmx" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>